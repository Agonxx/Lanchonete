@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<div class="layout-container">
    <header class="layout-header">
        <div class="header-container">
            <div class="navbar">
                <div class="navbar-brand">
                    <i class="fas fa-utensils brand-icon"></i>
                    <a href="" class="brand-text">Lanchonete</a>
                </div>

                <div class="navbar-links">
                    <NavLink href="" class="nav-link" Match="NavLinkMatch.All">
                        <i class="fas fa-home nav-icon"></i>
                        <span>Home</span>
                    </NavLink>
                    <NavLink href="pedidos" class="nav-link">
                        <i class="fas fa-clipboard-list nav-icon"></i>
                        <span>Pedidos</span>
                    </NavLink>
                    <NavLink href="caixa" class="nav-link">
                        <i class="fas fa-cash-register nav-icon"></i>
                        <span>Caixa</span>
                    </NavLink>
                </div>

                <button class="mobile-menu-toggle" @onclick="ToggleMobileMenu">
                    <i class="fa fa-bars" aria-hidden="true"></i>
                </button>
            </div>
        </div>
    </header>

    <div class="mobile-menu @(IsMobileMenuOpen ? "open" : "")">
        <NavLink href="" class="mobile-nav-link" Match="NavLinkMatch.All" @onclick="CloseMobileMenu">
            <i class="fas fa-home nav-icon"></i>
            <span>Home</span>
        </NavLink>
        <NavLink href="pedidos" class="mobile-nav-link" @onclick="CloseMobileMenu">
            <i class="fas fa-clipboard-list nav-icon"></i>
            <span>Pedidos</span>
        </NavLink>
        <NavLink href="caixa" class="mobile-nav-link" @onclick="CloseMobileMenu">
            <i class="fas fa-cash-register nav-icon"></i>
            <span>Caixa</span>
        </NavLink>
    </div>

    <main class="layout-main">
        <div class="container">
            <div class="content-card">
                @Body
            </div>
        </div>
    </main>
</div>

@code {
    private bool IsDarkTheme { get; set; } = false;
    private bool IsMobileMenuOpen { get; set; } = false;

    protected override void OnInitialized()
    {
        // Você pode adicionar lógica para carregar a preferência de tema do localStorage
    }

    private void ToggleMobileMenu()
    {
        IsMobileMenuOpen = !IsMobileMenuOpen;
    }

    private void CloseMobileMenu()
    {
        IsMobileMenuOpen = false;
    }
}